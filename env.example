# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=smart_alert_db
DB_SSLMODE=disable

# Database URL (alternatif, jika sudah lengkap)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/smart_alert_db?sslmode=disable

# Waha Server Configuration
WAHA_SERVER_URL=http://localhost:3000
WAHA_API_KEY=

# AI Configuration
# Options: openai, ollama
# For Ollama (FREE): Set AI_PROVIDER=ollama and install Ollama (https://ollama.ai)
AI_PROVIDER=ollama
AI_API_KEY=
AI_MODEL=llama3.2
# For Ollama, use: http://localhost:11434/v1
# Leave empty for OpenAI
AI_BASE_URL=http://localhost:11434/v1

# Application Configuration
APP_ENV=development
APP_PORT=8080
TIMEZONE=Asia/Jakarta

